{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2017"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "cloud-functions/node_modules"
  ]
}