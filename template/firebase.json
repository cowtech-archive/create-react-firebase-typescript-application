{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "source": "cloud-functions"
  },
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "!(**/*.@(jpg|jpeg|gif|png|svg|js))",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=300"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  }
}